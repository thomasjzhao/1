<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b05"
    tools:context=".BlankFragment2" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="207dp"
        android:layout_height="198dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="437dp"
        android:layout_height="49dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="36dp"
        android:text="Which pokemon will you get?"
        android:textColor="#B0BC3F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="239dp"
        android:layout_height="65dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:text=""
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="255dp"
        android:layout_height="43dp"
        android:layout_marginStart="76dp"
        android:text="Draw One!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="259dp"
        android:layout_height="48dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:text="Refill Diamond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="44dp"
        android:layout_height="35dp"
        android:layout_marginStart="291dp"
        android:layout_marginTop="8dp"
        android:foreground="@drawable/s02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="100"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/common"
        android:layout_width="118dp"
        android:layout_height="23dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="16dp"
        android:text="Common:0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/rare"
        android:layout_width="121dp"
        android:layout_height="23dp"
        android:layout_marginStart="45dp"
        android:text="Rare:0"
        android:textColor="#082DFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/common" />

    <TextView
        android:id="@+id/epic"
        android:layout_width="133dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:text="Epic:0"
        android:textColor="#CE0BEF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rare" />

    <TextView
        android:id="@+id/legendary"
        android:layout_width="148dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:text="Legendary:0"
        android:textColor="#F34109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/epic" />
</androidx.constraintlayout.widget.ConstraintLayout>